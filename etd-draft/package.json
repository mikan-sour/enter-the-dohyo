{
  "name": "etd-draft",
  "version": "1.0.0",
  "description": "draftboard for etd",
  "main": "index.ts",
  "scripts": {
    "test:client": "jest --env=jsdom --testPathPattern=src/client --coverage=true --coverageDirectory=./coverage_client && open ./coverage_client/index.html",
    "test:server": "jest --env=node --testPathPattern=src/server --coverage=true --coverageDirectory=./coverage_server",
    "start:dev": "node ./build/app.js",
    "build:client": "node build.client.mjs",
    "build:server": "node build.server.mjs",
    "build:all": "node build.client.mjs && node build.server.mjs"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.1.3",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@jest/globals": "^29.5.0",
    "@types/express": "^4.17.17",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "autoprefixer": "^10.4.14",
    "esbuild-css-modules-plugin": "^2.7.1",
    "esbuild-sass-plugin": "^2.9.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "postcss": "^8.4.24",
    "ts-jest": "^29.1.0"
  }
}
